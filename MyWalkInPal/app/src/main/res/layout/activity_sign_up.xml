<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_light"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.login.LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainAppContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/entFN"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autofillHints="@string/prompt_firstname"
            android:ems="10"
            android:hint="@string/hint_firstname"
            android:inputType="textPersonName"
            android:textColorHint="#FFA4A4"
            app:layout_constraintBottom_toTopOf="@+id/entFNtxt"
            app:layout_constraintEnd_toEndOf="@+id/entFNtxt"
            app:layout_constraintStart_toStartOf="@+id/entFNtxt"
            app:layout_constraintTop_toBottomOf="@+id/logoWalkInPal" />

        <ImageView
            android:id="@+id/logoWalkInPal"
            android:layout_width="375dp"
            android:layout_height="91dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/contentdesc_walkinpallogo"
            app:layout_constraintBottom_toTopOf="@+id/entFN"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logowalkinpal" />

        <TextView
            android:id="@+id/entFNtxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/prompt_firstname"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/entLN"
            app:layout_constraintEnd_toEndOf="@+id/entLN"
            app:layout_constraintStart_toStartOf="@+id/entLN"
            app:layout_constraintTop_toBottomOf="@+id/entFN" />

        <EditText
            android:id="@+id/entLN"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autofillHints="@string/prompt_lastname"
            android:ems="10"
            android:hint="@string/hint_lastname"
            android:inputType="textPersonName"
            android:textColorHint="#FFA4A4"
            app:layout_constraintBottom_toTopOf="@+id/entLNtxt"
            app:layout_constraintEnd_toEndOf="@+id/entLNtxt"
            app:layout_constraintStart_toStartOf="@+id/entLNtxt"
            app:layout_constraintTop_toBottomOf="@+id/entFNtxt" />

        <TextView
            android:id="@+id/entLNtxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/prompt_lastname"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/entEmailField"
            app:layout_constraintEnd_toEndOf="@+id/entEmailField"
            app:layout_constraintStart_toStartOf="@+id/entEmailField"
            app:layout_constraintTop_toBottomOf="@+id/entLN" />

        <EditText
            android:id="@+id/entEmailField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autofillHints="@string/prompt_email"
            android:ems="10"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:textColorHint="#FFA4A4"
            app:layout_constraintBottom_toTopOf="@+id/entEmailtxt"
            app:layout_constraintEnd_toEndOf="@+id/entEmailtxt"
            app:layout_constraintStart_toStartOf="@+id/entEmailtxt"
            app:layout_constraintTop_toBottomOf="@+id/entLNtxt" />

        <TextView
            android:id="@+id/entEmailtxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/prompt_email"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/entPassField"
            app:layout_constraintEnd_toEndOf="@+id/entPassField"
            app:layout_constraintStart_toStartOf="@+id/entPassField"
            app:layout_constraintTop_toBottomOf="@+id/entEmailField" />

        <EditText
            android:id="@+id/entPassField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autofillHints="@string/prompt_password"
            android:ems="10"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:textColorHint="#FFA4A4"
            app:layout_constraintBottom_toTopOf="@+id/entPasswordtxt"
            app:layout_constraintEnd_toEndOf="@+id/entPasswordtxt"
            app:layout_constraintStart_toStartOf="@+id/entPasswordtxt"
            app:layout_constraintTop_toBottomOf="@+id/entEmailtxt" />

        <TextView
            android:id="@+id/entPasswordtxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/prompt_password"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/entconfirmPassfield"
            app:layout_constraintEnd_toEndOf="@+id/entconfirmPassfield"
            app:layout_constraintStart_toStartOf="@+id/entconfirmPassfield"
            app:layout_constraintTop_toBottomOf="@+id/entPassField" />

        <EditText
            android:id="@+id/entconfirmPassfield"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autofillHints="@string/prompt_confirmpassword"
            android:ems="10"
            android:hint="@string/hint_reenterpass"
            android:inputType="textPassword"
            android:textColorHint="#FFA4A4"
            app:layout_constraintBottom_toTopOf="@+id/entconfirmpasswordtxt"
            app:layout_constraintEnd_toEndOf="@+id/entconfirmpasswordtxt"
            app:layout_constraintStart_toStartOf="@+id/entconfirmpasswordtxt"
            app:layout_constraintTop_toBottomOf="@+id/entPasswordtxt" />

        <TextView
            android:id="@+id/entconfirmpasswordtxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/prompt_confirmpassword"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/chooserUser"
            app:layout_constraintEnd_toEndOf="@+id/chooserUser"
            app:layout_constraintStart_toStartOf="@+id/chooserUser"
            app:layout_constraintTop_toBottomOf="@+id/entconfirmPassfield" />


        <RadioGroup
            android:id="@+id/chooserUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/SignUpButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/entconfirmpasswordtxt">

            <RadioButton
                android:id="@+id/employeeButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:buttonTint="@android:color/white"
                android:checked="false"
                android:text="@string/action_employeebutton"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                tools:layout_conversion_absoluteHeight="32dp"
                tools:layout_conversion_absoluteWidth="135dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="477dp" />

            <RadioButton
                android:id="@+id/patientButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:buttonTint="@android:color/white"
                android:text="@string/action_patientbutton"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                tools:layout_conversion_absoluteHeight="32dp"
                tools:layout_conversion_absoluteWidth="110dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="549dp" />
        </RadioGroup>

        <Button
            android:id="@+id/SignUpButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:background="#E0272E"
            android:text="@string/action_registeraccount"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/chooserUser"
            app:layout_constraintStart_toStartOf="@+id/chooserUser"
            app:layout_constraintTop_toBottomOf="@+id/chooserUser" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>